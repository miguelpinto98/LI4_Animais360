            </div>
            <div class="modal-body">
                @Html.RadioButton("resposta", "1", new { id = "Resposta1" }) @Html.Label("Text Content", new { id = "Hipotese1" }) <br />
                @Html.RadioButton("resposta", "2", new { id = "Resposta2" }) @Html.Label("Text Content", new { id = "Hipotese2" }) <br />
                @Html.RadioButton("resposta", "3", new { id = "Resposta3" }) @Html.Label("Text Content", new { id = "Hipotese3" }) <br />
                @Html.RadioButton("resposta", "4", new { id = "Resposta4" }) @Html.Label("Text Content", new { id = "Hipotese4" }) <br />
