@model IEnumerable<Animais360.Models.Jogo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:45%">
        @using (Html.BeginForm("Create", "Jogo", new { id = ViewBag.IdUser }, FormMethod.Post))
        {
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Decisões Iniciais da Aventura</h3>
            </div>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="modal-body">
                Continente:
                <select style="color:#000000" id="ContinenteID" name="ContinenteID">
                    <option value="1">África</option>
                    <option value="4">América</option>
                    <option value="3">Antártida</option>
                    <option value="2">Ásia</option>
                    <option value="5">Europa</option>
                    <option value="6">Oceania</option>
                </select><br /><br />
                
                Dificuldade:
                <select style="color:#000000" id="DificuldadeID" name="DificuldadeID">
                    <option value="1">Fácil</option>
                    <option value="2">Média</option>
                    <option value="3">Difícil</option>
                </select>
                <!--
                <div>
                    Personagem:&nbsp
                    <input style="margin-right:10px;" type="radio" name="s" value="m"><img src="assets/images/personagens/p1.png" width="28" height="30" />&nbsp&nbsp

                    <input style="margin-right:10px;" type="radio" name="s" value="m"><img src="assets/images/personagens/p1.png" width="28" height="30" />&nbsp&nbsp

                    <input style="margin-right:10px;" type="radio" name="s" value="m"><img src="assets/images/personagens/p1.png" width="28" height="30" />&nbsp&nbsp
                </div><br /><br />
                -->
            </div>
            <button class="md-close" style="margin-left:42%; margin-bottom:5%;"> Confirmar </button>
        </div>
        }
    </div>
</div>

<!-- Parte Essencial -->
<div class="content">
    <div class="content-body">
        <div id="map_canvas" style="height:600px;"></div>
    </div>
</div>
   
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA2YN0hK1nUK_Pln49Z-xO3GBX9i1LHoqI&sensor=false"></script>
<script>
    $('#myModal').modal('toggle');
        
    var p1 = new google.maps.LatLng(44.5403, 20);

    var map_options = {
        center: p1, zoom: 2,
        mapTypeId: google.maps.MapTypeId.TERRAIN,
        panControl: false, zoomControl: false, mapTypeControl: false,
        scaleControl: false, streetViewControl: false,
        //overviewMapControl: boolean
    };

    var map = new google.maps.Map(document.getElementById('map_canvas'), map_options);
    google.maps.event.addDomListener(window, 'load');
</script>
