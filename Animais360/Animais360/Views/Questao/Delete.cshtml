@model Animais360.Models.Questao

@{
    ViewBag.Title = "Remover Questão";
}

<div class="content">
    <div class="content-header">
        <h2 class="content-title"><i class="fa fa-dashboard"></i>Dashboard</h2>
    </div>
    <div class="content-body">
        <div id="panel-tablesorter" class="panel panel-default">
            <div class="panel-heading bg-white">
                <h3 class="panel-title" style="color:#F39C12">Tem mesmo a certeza que pretende eliminar esta questão?</h3>
            </div>

            <div class="panel-body">
                <div class="content-body">
                    @using (Html.BeginForm("Delete", "Questao", new { id = Model.QuestaoID }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = ViewBag.ID }))
                    {
                        @Html.HiddenFor(m => m.QuestaoID)

                        <div data-wizard="">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <div class="form-group">
                                @Html.LabelFor(m => m.Pergunta, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-5">
                                    @Html.Raw(Model.Pergunta)
                              
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-5">
                                    <input class="btn btn-primary" type="submit" value="Confirmar">
                                </div><!--/cols-->
                            </div>
                        </div><!-- /wizard -->
                    }<!-- /form wizard -->
                </div><!--/content-body -->
            </div>
        </div>
    </div>
</div>
