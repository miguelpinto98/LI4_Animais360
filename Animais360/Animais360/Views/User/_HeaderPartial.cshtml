@using Animais360.Models
@{
    User user = ((User)(Session["User"]));
}

<header class="header">
    <div class="header-brand">
        <a data-pjax=".content-body" href="@Url.Action("Index","User")">
            <img class="brand-logo" src="/../images/logo.png">
        </a>
    </div>
    <div class="header-profile">
        <div class="profile-nav">
            <span class="profile-username"> @user.UserName </span>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-angle-down"></span>
            </a>
            <ul class="dropdown-menu animated flipInX pull-right" role="menu">
                <li><a href="@Url.Action("Perfil", "User", new { id = user.UserId })"><i class="fa fa-user"></i> Perfil</a></li>
                <!--<li><a href="index.php.html#"><i class="fa fa-envelope"></i> Caixa de Entrada</a></li>-->
                 
                <li>
                    @using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm" })) {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()"><i style="margin-left:15px" class="fa fa-sign-out"></i> Sair </a>
                    }
                </li>
            </ul>
        </div>
        <div class="profile-picture">
            <img alt="me" src="~/Images/@user.Avatar" />
        </div>
    </div>
</header>